                <h5 class="modal-title">Ce que {{ golden.author.firstname }} {{ golden.author.lastname }} pense de moi :</h5>
            </div>
            <div class="modal-body">
                <p>{{ golden.content }}</p>
            </div>
            <div class="modal-footer">
                <p>Publi√© le : {{ golden.publishedDate|date("d/m/Y") }}</p>
            </div>
        </div>

    {% endfor %}

{% endblock %}